<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application' %>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-light fixed-top">
      <a class="navbar-brand logo" href="#">Instagram</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item <%= @home ? 'active' : '' %>">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "New Post", new_user_post_path(current_user), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Me", user_posts_path(current_user), class: "nav-link" %>
              </li>    
          <% end %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <% if user_signed_in? %>
                  <%= link_to "Sign Out", destroy_user_session_path, method: "delete", class: "dropdown-item" %>
              <% else %>
                  <%= link_to "Sign In", new_user_session_path, class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
        </ul>
        
      </div>
    </nav>

    <main role="main" class="container">
        <% unless notice.nil? %>
          <div class="alert alert-success">
            <%= notice %>
          </div>
        <% end %>
        <% unless alert.nil? %>
          <div class="alert alert-danger">
            <%= alert %>
          </div>
        <% end %>
        <%= yield %>

    </main><!-- /.container -->
      
   
  </body>
</html>
